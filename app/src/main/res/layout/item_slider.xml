<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="movie"
            type="com.basemosama.movies.data.Movie" />
        <import type="com.basemosama.movies.data.ImageType"/>
    </data>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <ImageView
        android:id="@+id/slider_image"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:contentDescription="SLider Image"
        android:scaleType="centerCrop"
        app:sliderImage="@{movie.posterPath}"
        app:type="@{ImageType.POSTER_LARGE}"
        tools:src="@drawable/madmax" />
    </RelativeLayout>




</layout>
